generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ROLES {
  ADMIN
  PREMIUM
  FREE
}

enum LEVELS {
  BASIC
  INTERMEDIATE
  ADVANCED
}

model users {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  password       String
  username       String   @unique
  name           String
  last_name      String
  viewed_classes Int[]
  role           ROLES    @default(FREE)
  verified       Boolean  @default(false)
  verification_code  String?
  code_expiry        DateTime?
}

model courses {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  level       LEVELS
  nameUrl     String    @unique
  imageUrl    String?
  classes     classes[] 
}

model classes {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  role        ROLES
  classNumber Int
  imageUrl    String?
  routeId     Int
  route       courses    @relation(fields: [routeId], references: [id])
}