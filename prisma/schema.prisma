generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ROLES {
  ADMIN
  PREMIUM
  FREE
}

model users {
  id             Int      @id @default(autoincrement())
  email          String   @unique
  password       String
  username       String   @unique
  name           String
  last_name      String
  viewed_classes Int[]
  role           ROLES    @default(FREE)
  verified       Boolean  @default(false)
  verification_code  String?
  code_expiry        DateTime?
}
